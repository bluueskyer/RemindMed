/*搜索框样式*/
.searchbox{
  width:80%;
  height:40px;
  margin:1px auto;
  display:flex;
  flex-direction: row;
  align-items: center;
  border-radius:45px;
  border:1px solid grey;
  padding-left:15px;
  
}
input{
  width:80%;
  height:40px;
  font-size: 20px;
  padding-left:15px;
}
.head{
  display:flex;
  
}
.search{
  padding-right:5px;
  line-height:45px;
  font-size:20px;
}












