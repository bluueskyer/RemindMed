/*form表单样式*/

.addoperation{
  
  width:100%;
  height:680px;
  padding:15px 15px;
  box-sizing: border-box;
  background-color:rgb(228, 228, 228);
}
.addoperation .add{
 
  width:90%;
  height:100%;
  border-radius: 23px;
  background-color:white;
  padding:0 15px;
}


.section{
  width:100%;
  height:50px;
  border-bottom:1px solid rgb(228, 228, 228);
  display: flex;
  flex-direction: row;
  font-size:18px;
  line-height: 50px;

}
.section .section1{
  width:30%;
}
.section .section2{
  width:70%;
  text-align:center;
}

.section input{
  width: 200px;
  height:50px;
  font-size:15px;
  text-align:center;
 
}
textarea{
border-radius:15px;
background-color:rgb(228, 228, 228);
  margin:0 auto;
  padding:10px 10px;
  box-sizing: border-box;
}

.section_beizhu{
  font-size:18px;
  margin:10px 0;
}
.submit{
  width:302px;
  margin:20px auto;
  height:50px;
 
  border-radius:21px;
  background-color:black;
  color:white;
}